<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.korthuijoregonstate.HOMEFINAL.NewData">

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Update"
        android:layout_toEndOf="@+id/Update"
        android:layout_marginStart="33dp"
        android:id="@+id/Delete" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Update"
        android:layout_alignBaseline="@+id/Insert"
        android:layout_alignBottom="@+id/Insert"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Beer"
        android:ems="10"
        android:id="@+id/Beer"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Update" />

    <Button
        android:text="Display table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Display"
        android:layout_alignBaseline="@+id/Filter"
        android:layout_alignBottom="@+id/Filter"
        android:layout_alignEnd="@+id/Delete"
        android:layout_marginEnd="14dp"
        android:elevation="11dp"
        android:typeface="normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/rating"
        android:text="rating"
        android:layout_below="@+id/Type"
        android:layout_alignStart="@+id/Beer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/content"
        android:text="alcohol content"
        android:layout_below="@+id/rating"
        android:layout_alignStart="@+id/rating" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Type"
        android:ems="10"
        android:id="@+id/Type"
        android:layout_below="@+id/Beer"
        android:layout_alignStart="@+id/rating" />

    <Button
        android:text="Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="47dp"
        android:id="@+id/Filter"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/content" />

    <Button
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:id="@+id/userID"
        android:layout_above="@+id/Display"
        android:layout_alignStart="@+id/Update" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Insert"
        android:layout_alignStart="@+id/Filter"
        android:layout_marginTop="24dp"
        android:id="@+id/fake_view" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Insert"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/content"
        android:layout_alignParentStart="true" />

</RelativeLayout>
